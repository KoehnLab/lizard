---
Checks: "-*,
         bugprone-*,
         clang-analyizer-*,
         concurrency-*,
         cppcoreguidelines-*,
         -cppcoreguidelines-avoid-magic-numbers,
         misc-*,
         modernize-*,
         performance-*,
         portability-*,
         readability-*,
         -misc-no-recursion,
         -modernize-use-auto"

WarningsAsErrors: ''
HeaderFilterRegex: ''
AnalyzeTemporaryDtors: false
UseColor: true
CheckOptions:
- key: readability-magic-numbers.IgnorePowersOf2IntegerValues
  value: 'true'
